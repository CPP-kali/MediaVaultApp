<Window x:Class="MovieAppMySQL.StartSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieAppMySQL"
        mc:Ignorable="d"
        Title="StartSession" Height="450" Width="800">
    <Grid Height="389" VerticalAlignment="Top" Margin="0,45,0,0">
        <!-- Username Field -->
        <TextBlock Text="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,70,20,0" Height="30"/>

        <!-- Password Field -->
        <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,131,0,0"/>
        <PasswordBox Name="PasswordBox" Margin="20,152,20,0" Height="30" VerticalAlignment="Top"/>

        <!-- Register Button -->
        <Button Name="RegisterButton" Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,304,0,0" Width="100" Height="40" Click="RegisterButton_Click"/>

        <!-- Login Button -->
        <Button Name="StartButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="340,209,0,0" Width="100" Height="40" Click="StartButton_Click"/>
    </Grid>
</Window>
