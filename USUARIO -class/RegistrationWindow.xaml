<Window x:Class="MovieAppMySQL.RegistrationWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Registration" Height="350" Width="400">
    <Grid Height="334" VerticalAlignment="Bottom">
        <!-- Username Field -->
        <TextBlock Text="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,70,20,0" Height="30"/>

        <!-- Password Field -->
        <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,131,0,0"/>
        <PasswordBox Name="PasswordBox" Margin="20,152,20,0" Height="30" VerticalAlignment="Top"/>

        <!-- Confirm Password Field -->
        <TextBlock Text="Confirm Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,208,0,0"/>
        <PasswordBox Name="ConfirmPasswordBox" VerticalAlignment="Top" Margin="20,229,20,0" Height="30"/>

        <!-- Register Button -->
        <Button Name="RegisterButton" Content="Register" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="100" Height="40" Click="RegisterButton_Click"/>
    </Grid>
</Window>


